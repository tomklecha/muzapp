<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuzApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MuzApp.ShapeOverlay.Button.Circle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MuzApp.SendButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="shapeAppearance">@style/MuzApp.ShapeOverlay.Button.Circle</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="icon">@drawable/ic_baseline_send_24</item>
        <item name="android:insetTop">@dimen/material_0dp</item>
        <item name="android:insetLeft">@dimen/material_0dp</item>
        <item name="android:insetRight">@dimen/material_0dp</item>
        <item name="android:insetBottom">@dimen/material_0dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/circle_gradient_color</item>
    </style>

    <style name="MuzApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.EditText</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.EditText" parent="">
        <item name="colorControlNormal">@color/pink_400</item>
        <item name="colorControlActivated">@color/pink_400</item>
        <item name="colorAccent">@color/red_400</item>
        <item name="colorPrimary">@color/red_400</item>
    </style>

    <style name="MuzApp.CardView.MessageSend" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/pink_400</item>
        <item name="shapeAppearance">@style/MuzApp.ShapeOverlay.TextView.Send</item>
        <item name="android:layout_margin">@dimen/material_4dp</item>
    </style>

    <style name="MuzApp.CardView.MessageSend.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/material_4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MuzApp.ShapeOverlay.TextView.Send" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/material_8dp</item>
        <item name="cornerSizeTopLeft">@dimen/material_8dp</item>
        <item name="cornerSizeBottomRight">@dimen/material_0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/material_8dp</item>
    </style>

    <style name="MuzApp.CardView.MessageReceived" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/blue_grey_200</item>
        <item name="shapeAppearance">@style/MuzApp.ShapeOverlay.TextView.Received</item>
        <item name="android:layout_margin">@dimen/material_4dp</item>
    </style>

    <style name="MuzApp.CardView.MessageReceived.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/material_4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MuzApp.ShapeOverlay.TextView.Received" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/material_8dp</item>
        <item name="cornerSizeTopLeft">@dimen/material_8dp</item>
        <item name="cornerSizeBottomRight">@dimen/material_8dp</item>
        <item name="cornerSizeBottomLeft">@dimen/material_0dp</item>
    </style>
</resources>